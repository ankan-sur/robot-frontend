###############################################
# Network endpoints
# For local development: Leave empty to auto-detect from window.location.hostname
# For cloud deployment (Vercel): Set these to your robot's public IP or domain
###############################################

# ROS Bridge WebSocket connection
# Local: leave empty (auto-detects as ws://localhost:9090)
# Cloud: set to your robot's public address
# Example: ws://my-robot.example.com:9090 or ws://123.45.67.89:9090
VITE_ROSBRIDGE_URL=

# Video server base URL
# Local: leave empty (auto-detects as http://localhost:8080)
# Cloud: set to your robot's public address
# Example: http://my-robot.example.com:8080 or http://123.45.67.89:8080
VITE_VIDEO_BASE=

# visualization_rwt base url (http://HOST:8001 by default)
VITE_RWT_BASE=

# Individual widget URLs (override when serving widgets separately)
VITE_RWT_MAP_URL=
VITE_RWT_TELEOP_URL=
VITE_RWT_IMAGE_URL=

# Optional external tooling
VITE_ROSBOARD_URL=

# WebRTC camera (webrtc_ros2)
VITE_WEBRTC_SIGNALING_URL=
VITE_WEBRTC_STREAM_ID=
# Example: [{"urls":"stun:stun.l.google.com:19302"}]
VITE_WEBRTC_ICE_SERVERS=

# Optional: Mode backend API base (defaults to http://<host>:8000)
VITE_BACKEND_BASE=

# Optional: Control token for robot command authentication
# Only needed if CONTROL_TOKEN is set on the backend
# VITE_CONTROL_TOKEN=your_secret_token_here

###############################################
# Connection Mode
###############################################

# Connection mode: 'direct' for LAN/rosbridge, 'cloud' for cloud backend
# Default: direct (LAN)
VITE_CONNECTION_MODE=direct

# Demo mode: 'true' to use Demo Day UI with POI navigation
# Default: false (uses normal App)
VITE_DEMO_MODE=false
